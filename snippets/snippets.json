{
	"smart_faq": {
		"scope": "html,php",
		"prefix": "stfaq",
		"body": [
			"<div id=\"st-faq\"></div>",
			"<script type=\"text/javascript\">",
			"    (function (d, s) {",
			"        var js,",
			"            fjs = d.getElementsByTagName(s)[0];",
			"        if (typeof __STFAQ !== 'undefined') {",
			"            return;",
			"        };",
			"        js = d.createElement(s);",
			"        js.async = true;",
			"        js.src = \"https://static.smart-tribune.com/faq/general/smart-tribune-faq-v2.min.js?callback=?&client=${1:client}&env=${2:env}\";",
			"        fjs.parentNode.insertBefore(js, fjs);",
			"    }(document, 'script'));",
			"</script>"
		],
		"description": "Insert the Smart Tribune dynamic FAQ"
	},
	"smart_push": {
		"scope": "html,php",
		"prefix": "sthb",
		"body": [
			"<script>",
			"    var STHelpbox = {",
			"        categories: '${1:categories}',",
			"        themes: '${2:themes}',",
			"        trigger: {",
			"            onCloseNoRepeat: '${3:onCloseNoRepeat}',",
			"            timer: ${4:timer},",
			"            onInactivity: '${5:onInactivity}'",
			"        },",
			"        ChatBox: {",
			"            openned: '${6:openned}',",
			"            trigger: {",
			"                timer: ${7:timer}",
			"            }",
			"        }",
			"    }",
			"</script>",
			"<script type=\"text/javascript\" src=\"https://static.smart-tribune.com/faq/helpbox/smart-tribune-helpbox.min.js?callback=?&client=${8:client}&env=${9:env}\"></script>"
		],
		"description": "Insert the Smart Tribune Helpbox"
	},
	"contact_form_input_widget": {
		"scope": "html,php",
		"prefix": "stcfi",
		"body": [
			"<script type=\"text/javascript\" src=\"https://static.smart-tribune.com/faq/contact/smart-tribune.dynamic-faq.min.js\"></script>",
			"<script type=\"text/javascript\">",
			"    new STDFAQ({",
			"        elementType: 'textInput',",
			"        element: '#${1:your-field}',",
			"        platformId: ${2:ID},",
			"        pathToFaq: '${3:url-to-your-faq}',",
			"        limit: ${4:limit}",
			"    });",
			"</script>"
		],
		"description": "Insert the Smart Tribune contact form widget on text input"
	},
	"contact_form_select_widget": {
		"scope": "html,php",
		"prefix": "stcfs",
		"body": [
			"<script type=\"text/javascript\" src=\"https://static.smart-tribune.com/faq/contact/smart-tribune.dynamic-faq.min.js\"></script>",
			"<script type=\"text/javascript\">",
			"    new STDFAQ({",
			"        elementType: 'selectList',",
			"        element: '#${1:your-field}',",
			"        platformId: ${2:ID},",
			"        pathToFaq: '${3:url-to-your-faq}',",
			"        limit: ${4:limit}",
			"        customWrapperId: '${5:your-customID}',",
			"        selectMapping: {",
			"           '${6:option1}': {",
			"               categories: ['${7:category1}', '${8:category2}'],",
			"               themes: ['${9:theme1}']",
			"           },",
			"           '${10:option2}': {",
			"               categories: ['${11:category3}']",
			"           },",
			"           '${12:option3}': {",
			"               categories: ['${13:category4}']",
			"           },",
			"        },",
			"    });",
			"</script>"
		],
		"description": "Insert the Smart Tribune contact form widget on select list"
	},
	"context_widget": {
		"scope": "html,php",
		"prefix": "stct",
		"body": [
			"<div id=\"container\"></div>",
			"<script type=\"text/javascript\" src=\"https://static.smart-tribune.com/faq/context/smart-tribune-contextualized-faq.min.js\"></script>",
			"<script type=\"text/javascript\">",
			"    new STCFAQ({",
			"        container: '#${1:your-field}',",
			"        platformId: ${2:ID},",
			"        category_id: '${3:categories}',",
			"        theme_id: ${4:themes},",
			"        limit: ${5:limit},",
			"    });",
			"</script>"
		],
		"description": "Insert the Smart Tribune context FAQ widget"
	}
}
